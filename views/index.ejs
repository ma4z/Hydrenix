<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Dark Mode Background Gradient */
        .bg-gradient-to-br {
            background: linear-gradient(135deg, #1e293b, #4f46e5); /* dark blue to deep purple */
        }
        /* Dark Mode Form Container */
        .form-container {
            backdrop-filter: blur(8px);
            background-color: rgba(31, 41, 55, 0.85); /* semi-transparent dark background */
        }
        /* Dark Text Colors */
        .text-dark-heading {
            color: #c4b5fd; /* light lavender */
        }
        .text-dark-subtext {
            color: #9ca3af; /* cool gray */
        }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen bg-gradient-to-br from-gray-900 to-blue-900">

    <div class="w-full max-w-md p-8 space-y-6 rounded-lg shadow-lg form-container">
        <div class="text-center">
            <!-- SVG Icon (Login Icon) -->
        
            <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 mx-auto text-indigo-400"  fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z" />
              </svg>
              
            <h2 class="mt-4 text-3xl font-bold text-dark-heading">Welcome Back</h2>
            <p class="text-sm text-dark-subtext">Please enter your credentials to login.</p>
        </div>

        <form id="loginForm" class="space-y-6">
            <div>
                <label for="username" class="block mb-1 text-sm font-semibold text-dark-heading">Username</label>
                <div class="relative">
                    <!-- User Icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="absolute w-5 h-5 text-indigo-500 left-3 top-3" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                      </svg>                      
                    <input id="username" name="username" type="text" required class="w-full pl-10 p-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="Your username" required >
                </div>
            </div>

            <div>
                <label for="password" class="block mb-1 text-sm font-semibold text-dark-heading">Password</label>
                <div class="relative">
                    <!-- Lock Icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="absolute w-5 h-5 text-indigo-500 left-3 top-3"  fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z" />
                      </svg>
                      
                    <input id="password" name="password" type="password" required class="w-full pl-10 p-3 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="Your password" required >
                </div>
            </div>

            <button type="button" onclick="redirectToLogin()" class="w-full p-3 text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Login
            </button>
        </form>

    </div>
    <script>
        function redirectToLogin() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            // Redirect to /auth/login with username and password as query parameters
            window.location.href = `/auth/login?username=${encodeURIComponent(username)}&password=${encodeURIComponent(password)}`;
        }
    </script>

</body>
</html>
